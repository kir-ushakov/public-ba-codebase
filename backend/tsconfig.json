{
  "files": ["server.ts", "src/app.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "lib": ["es2022"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts"]
}
